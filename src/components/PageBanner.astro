---
import { PageBannerProps } from '../interfaces';
const { title, imageUrl = '/assets/imgs/img2.jpg' } = Astro.props as PageBannerProps;
---

<div class="banner mb-4" style={`background-image: url(${imageUrl})`}>
	<div class="wrapper">
		<div class="flex">
			<h1 class="main-heading">{title}</h1>
		</div>
	</div>
</div>

<style lang="scss">
	.banner {
		height: 40vh;
		background-color: #333;
		background-repeat: no-repeat;
		background-size: cover;
		background-position: center center;
		background-blend-mode: overlay;

		color: #fff;

		.wrapper,
		.flex {
			width: 100%;
			height: 100%;
		}

		.flex {
			align-items: center;
			justify-content: center;
		}

		.main-heading {
			font-size: clamp(3rem, 2rem + 2vw, 6rem);
			text-transform: capitalize;
		}
	}
</style>
